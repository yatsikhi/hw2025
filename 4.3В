import java.util.*;

public class Main {
    public static void main(String[] args) {
        Scanner scanner = new Scanner(System.in);
        int n = scanner.nextInt();

       
        if (n <= 8) {
            System.out.println("No");
        } else {
            System.out.println("Yes");

            //  остальные убывают
            System.out.print("7 6 ");
            for (int i = 5; i >= 0; i--) {
                System.out.print(i + " ");
            }
            for (int i = 10; i <= n; i++) {
                System.out.print(i + " ");
            }
        }
    }
}
